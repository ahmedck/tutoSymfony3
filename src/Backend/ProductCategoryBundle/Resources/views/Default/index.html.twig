{% extends 'backend.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 ">
        <h1>{% trans %}CATEGORIES{% endtrans %}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">

            <a  class="btn btn-primary" href="{{ path('backend_product_category_add') }}">
                <span class="glyphicon glyphicon-plus"></span>
                {% trans %}ADD{% endtrans %}
            </a>

        </div>
    </div>


    <div class="table-responsive mt-5">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>#</th>
                <th>{% trans %}CATEGORY{% endtrans %}</th>
                <th>{% trans %}ACTIONS{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>

            {% for category in categories %}
                <tr>
                    <td>{{ category.idProductCategory }}</td>
                    <td>{{ category.category }}</td>
                    <td>
                        <a href="{{ path('backend_product_category_edit' , {'idProductCategory': category.idProductCategory } ) }}">
                            <i class="fas fa-pencil-alt"></i>
                        </a>&nbsp;&nbsp;
                        <a href="{{ path('backend_product_category_delete' , {'idProductCategory': category.idProductCategory } ) }}">
                            <i class="fas  fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">{% trans %}NO_RESULT{% endtrans %}</td>
                </tr>
            {% endfor %}


            </tbody>
        </table>

    </div>



{% endblock %}