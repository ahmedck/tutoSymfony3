{% extends 'backend.html.twig' %}

{% block body %}
   <h2 class="mb-5">{% trans %}ADD_USER{% endtrans %}</h2>


    <form class="col-md-5" action="{{ path('backend_user_add') }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>{% trans %}FULLNAME{% endtrans %}</label>
            <input type="text" name="fullname" class="form-control"  >
        </div>
        <div class="form-group">
            <label>{% trans %}EMAIL{% endtrans %}</label>
            <input type="email" name="email" class="form-control" >
        </div>
        <div class="form-group">
            <label>{% trans %}PASSWORD{% endtrans %}</label>
            <input type="password" name="password" class="form-control" >
        </div>
        <div class="form-group">
            <label>{% trans %}CONFIRMATION_PASSWORD{% endtrans %}</label>
            <input type="password" name="repassword" class="form-control" >
        </div>
        <div class="form-group">
            <label>{% trans %}ROLE{% endtrans %}</label>
            <select name="role" class="form-control"  placeholder="RÃ´le">
                <option value="ADMIN">{% trans %}ADMIN{% endtrans %}</option>
                <option value="SIMPLE">{% trans %}SIMPLE{% endtrans %}</option>
            </select>
        </div>
        <div class="form-group">
            <label>Photo</label>
            <input type="file" accept="image/jpeg" name="photo" class="form-control"  placeholder="Photo">
        </div>
        <div class="form-group">
            <input type="submit" value="{% trans %}SUBMIT{% endtrans %}" class=" btn btn-primary">
        </div>
    </form>

{% endblock %}